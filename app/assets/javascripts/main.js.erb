        game.load.image("right-circle","<%= asset_path('right-circle.png') %>");
        game.load.spritesheet("highScoreButton","<%= asset_path('button.jpg') %>");
        game.load.spritesheet("startButton","<%= asset_path('start-button.jpg') %>");
